.advantage-box
	display grid
	grid-template-columns 100%
	grid-template-rows 1fr auto auto
	padding 30px 27px 30px 28px
	background #FFF
	border-radius 20px
	
	@media $smMinus
		padding 24px
	
	@media $xs
		grid-template-rows auto auto 1fr
		padding 20px
	
	&__number,
	&__title
		font-weight 600
		font-size 18px
		line-height 1.26246
	
	&__number
		// margin-bottom 44px
		margin-bottom 23px
		margin-left 2px
	
	&__title
		margin-bottom 15px
	

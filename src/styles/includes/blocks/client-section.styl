.client-section
	padding 36px 0 100px
	
	@media $mdMinus
		padding 30px 0 80px
		
	@media $smMinus
		padding 25px 0 60px
	
	@media $xs
		padding 20px 0 40px
	
	&__container
		display grid
		grid-template-columns 540px auto
		justify-content space-between
		align-items center
		gap 40px
		
		@media $mdMinus
			gap 30px
		
		@media $smMinus
			grid-template-columns 1fr auto
			gap 20px
		
		@media $xs
			grid-template-columns 100%
	
	&__title
		margin-bottom 28px
		font-weight 600
		font-size 50px
		line-height 1.045
		color #060606
		
		@media $mdMinus
			margin-bottom 24px
			font-size 42px
			
		@media $smMinus
			margin-bottom 20px
			font-size 36px
		
		@media $xs
			font-size 30px
		
		@media $xxs
			font-size 26px
	
	&__note
		width 400px
		max-width 100%
		margin-bottom 30px
		padding-left 19px
		border-left 4px solid #88070A
		font-weight 600
		font-size 16px
		line-height 1.42246
		
		@media $mdMinus
			margin-bottom 25px
		
		@media $smMinus
			width auto
			margin-bottom 20px
		
		@media $xs
			padding-left 14px
			font-size 15px
	
	&__text
		margin-bottom 30px
		color #181818
		line-height 1.79746
	
	&__btn
		@media $xs
			width 100%
	
	&__logo
		@media $xs
			order -1
			margin-right auto
			margin-left auto
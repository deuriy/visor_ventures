.client-accordion-panel
	position relative
	display flex
	// justify-content end
	// display grid
	// grid-template-columns auto auto
	overflow hidden
	@extend .transition
	
	@media $md
		width 100px
	
	// @media $smMinus
	// 	grid-template-columns 100%
	
	// @media $xs
	// 	grid-template-columns 100%
	
	&__short
		// display grid
		// grid-template-columns 100%
		// place-items center
		display flex
		justify-content center
		align-items center
		width 100px
		height 400px
		border-radius 20px
		background #202020
		text-decoration none
		overflow hidden
		transition all .3s
		
		@media $mdMinus
			height 100%
		
		@media $xs
			display none
		
		&:hover
			background lighten(#202020, 5)
	
	&__short-title
		color #FFF
		font-weight 600
		font-size 20px
		line-height 1.26246
		text-align center
		opacity 0.699999988079071
		transform rotate(-90deg)
		
	&__full
		order -1
		display grid
		grid-template-columns 330px 380px
		align-items end
		gap 70px
		color #FFF
		transition all .7s
		
		@media $md
			width 0
			overflow hidden
		
		@media $mdMinus
			grid-template-columns 240px 290px
			gap 30px
		
		@media $smMinus
			grid-template-columns 1fr 290px
			gap 50px
			width 680px
			max-width 100%
			margin-right auto
			margin-left auto
		
		@media $xs
			display grid
			grid-template-columns 100%
			gap 30px
			width 290px
		
		@media $xxs
			gap 20px
	
	&__title
		margin-bottom 6px
		font-weight 600
		font-size 28.567px
		line-height 1.26246
		
		@media $xs
			font-size 24px
	
	&__note
		margin-bottom 20px
		font-size 12px
		line-height 1.59746
		opacity 0.699999988079071
	
	&__text
		display -webkit-box
		text-overflow ellipsis
		-webkit-line-clamp 6
		-webkit-box-orient vertical
		word-wrap break-word
		overflow hidden
		margin-bottom 20px
		font-size 13.804px
		line-height 1.79746
	
	&__more-link
		color #FFF
		font-weight 600
		
		&:hover
			text-decoration none
	
	&__logo
		@media $xs
			order -1
	
	&--opened,
	&--opening
		@media $md
			width calc(100% - 390px)
	
	&--opened
		width 780px
		
		@media $mdMinus
			width 560px
		
		@media $smMinus
			width 680px
		
		@media $xs
			width 290px
		
		.client-accordion-panel__short
			width 0
			
		.client-accordion-panel__full
			// justify-content end
			width 780px
			
			@media $md
				position absolute
				top 0
				right 0
				bottom 0
			
			@media $mdMinus
				width 560px
			
			@media $smMinus
				width 680px
			
			@media $xs
				width 290px
	
	&--closed
		.client-accordion-panel__short
			width 0
	
	&--invisible
		width 0
		visibility hidden
		opacity 1
		margin-left 0 !important
	
	// &--opening
	// 	position absolute
	// 	top 0
	// 	right 0
	// 	bottom 0


.no-transition {
	transition: none !important;
}
.no-transition + .client-accordion-panels__item {
	transition: none !important;
}

.client-accordion-panels__item {
	background-color: #181818;
}

.client-accordion-panel--opening {
	transition: none;
	margin-left: 0 !important;
}
.client-accordion-panel--opening + .client-accordion-panel--opened {
	margin-left: 0 !important;
	position: absolute;
	right: 260px;
	top: 0;
	width: 100px;
}
.client-accordion-panel--opening + .client-accordion-panel--opened .client-accordion-panel__short {
	width: 100px;
	transition: width 300ms ease-out;
}
.client-accordion-panel--opening + .client-accordion-panel--opened .client-accordion-panel__full {
	width: 0;
	transition: width 300ms ease-out;
}
.client-accordion-panel--opening + .client-accordion-panel--opened + .client-accordion-panels__item {
	margin-left: 160px;
	transition: margin-left 300ms ease-out;
}

.client-accordion-panels {
	position: relative;
	display: flex;
	gap: 0;
}
.client-accordion-panel {
	// width: 100px;
	margin-left: 30px;
	transition: width ease-out 500ms, margin-left ease-out 500ms;
}
// .client-accordion-panel--opened,

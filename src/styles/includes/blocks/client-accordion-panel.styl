.client-accordion-panel
	position relative
	display grid
	grid-template-columns auto auto
	overflow hidden
	
	@media $smMinus
		grid-template-columns 100%
	
	@media $xs
		grid-template-columns 100%
	
	&__short
		display grid
		grid-template-columns 100%
		place-items center
		width 100px
		height 400px
		border-radius 20px
		background #202020
		text-decoration none
		overflow hidden
		transition background .3s
		
		@media $mdMinus
			height 100%
		
		@media $xs
			display none
		
		&:hover
			background lighten(#202020, 5)
	
	&__short-title
		color #FFF
		font-weight 600
		font-size 20px
		line-height 1.26246
		text-align center
		opacity 0.699999988079071
		transform rotate(-90deg)
		
	&__full
		display grid
		grid-template-columns 330px 380px
		align-items end
		gap 70px
		color #FFF
		overflow hidden
		transition all .7s
		
		@media $md
			width 0
		
		@media $mdMinus
			grid-template-columns 240px 290px
			gap 30px
		
		@media $smMinus
			grid-template-columns 1fr 290px
			gap 50px
			width 680px
			max-width 100%
			margin-right auto
			margin-left auto
		
		@media $xs
			display grid
			grid-template-columns 100%
			gap 30px
			width 290px
		
		@media $xxs
			gap 20px
	
	&__title
		margin-bottom 6px
		font-weight 600
		font-size 28.567px
		line-height 1.26246
		
		@media $xs
			font-size 24px
	
	&__note
		margin-bottom 20px
		font-size 12px
		line-height 1.59746
		opacity 0.699999988079071
	
	&__text
		display -webkit-box
		text-overflow ellipsis
		-webkit-line-clamp 6
		-webkit-box-orient vertical
		word-wrap break-word
		overflow hidden
		margin-bottom 20px
		font-size 13.804px
		line-height 1.79746
	
	&__more-link
		color #FFF
		font-weight 600
		
		&:hover
			text-decoration none
	
	&__logo
		@media $xs
			order -1
	
	&--opened		
		.client-accordion-panel__short
			width 0
			
		.client-accordion-panel__full
			// justify-content end
			width 780px
			
			@media $md
				position absolute
				top 0
				right 0
				bottom 0
			
			@media $mdMinus
				width 560px
			
			@media $smMinus
				width 680px
			
			@media $xs
				width 290px
// }
.client-accordion-panel--closed {
	width: 0;
	margin-left: 0;
}
.client-accordion-panel--opened {
	margin-left: 0;
}
.client-accordion-panel--closed:first-child ~ .client-accordion-panels__item:nth-child(5),
.client-accordion-panel--closed:first-child + .client-accordion-panel--closed ~ .client-accordion-panels__item:nth-child(6),
.client-accordion-panel--closed:first-child + .client-accordion-panel--closed + .client-accordion-panel--closed ~ .client-accordion-panels__item:nth-child(7)
{
	width: 100px;
}
.client-accordion-panels__item:nth-child(n+5) {
	width: 0;
	margin-left: 0;
}
			@media $xs
				top -15px
				right -17px
				width 80px
				height 80px
				
			@media $xxs
				top -13px
				right -14px
				width 65px
				height 65px
		
	&--light-grey
		background #EEEFF4
	
	&--small
		width 170px
		height 170px
		padding 20px
		border-radius 10px
		
		@media $smMinus
			width 130px
			height 130px
		
		@media $xs
			width 90px
			height 90px
		
		&.client-logo--exited
			&::after
				top -20px
				right -20px
				
				@media $smMinus
					top -14px
					right -14px
					width 65px
					height 65px
				
				@media $xs
					top -9px
					right -10px
					width 45px
					height 45px
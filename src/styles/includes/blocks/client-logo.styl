.client-logo
	position relative
	display grid
	grid-template-columns 100%
	// place-items center
	width 380px
	height 400px
	border-radius 20px
	background #FBFDFC
	
	&__img,
	&__tag
		grid-area 1 / 1 / 2 / 2
	
	&__img
		justify-self center
		align-self center
	
	&__tag
		position absolute
		// display inline-flex
		display inline-grid
		grid-template-columns 100%
		// justify-self end
		top 0
		right 0
		width 84px
		height 85px
		grid-area 1 / 1 / 2 / 2

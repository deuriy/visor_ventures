.client-logo
	position relative
	display grid
	grid-template-columns 100%
	place-items center
	width 380px
	height 400px
	max-width 100%
	border-radius 20px
	// background #FBFDFC
	background #FFF
	
	@media $xs
		width 340px
		height 340px
		
	@media $xxs
		width 260px
		height 260px
	

.upload-file
	position relative
	
	&__input
		opacity 0
		visibility hidden
		position absolute
	
	&__wrapper
		display grid
		grid-template-columns auto 1fr
		align-items center
		gap 20px
		
		@media $xs
			grid-template-columns 100%
	
	&__btn
		display inline-flex
		justify-content center
		align-items center
		gap 10px
		padding 17px 34px
		border none
		outline none
		border-radius 10px
		background #262626
		color #FFF
		font-weight 600
		font-size 14px
		line-height 1.5
		cursor pointer
		

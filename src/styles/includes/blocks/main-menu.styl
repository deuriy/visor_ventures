.main-menu
	&__list
		list-style none
		display flex
		gap 36px
		
		@media $smMinus
			flex-direction column
			gap 12px
	
	&__link
		color #000
		font-size 16px
		text-decoration none
		@extend .transition
		
		@media $smMinus
			display block
			padding 10px 0
			text-align center
		
		&:hover
			color lighten(#000, 50%)
	
	&__item
		&--active
			.main-menu__link
				font-weight 600
				
				&:hover
					color #000
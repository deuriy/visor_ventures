.infoblocks-section
	padding 26px 0 116px
	
	@media $mdMinus
		padding-bottom 100px
		
	@media $smMinus
		padding-bottom 80px
		
	@media $xxs
		padding-top 20px
		padding-bottom 60px
	
	&__items
		display grid
		grid-template-columns repeat(4, 1fr)
		grid-auto-rows 232px 238px
		gap 30px
		
		@media $mdMinus
			grid-auto-rows repeat(2, 210px)
			gap 25px
			
		@media $smMinus
			grid-template-columns repeat(2, 1fr)
			// grid-auto-rows 320px
			grid-auto-rows 280px 230px 230px
			gap 20px
			width 540px
			max-width 100%
			margin-right auto
			margin-left auto
		
		@media $xxs
			grid-template-columns 100%
			grid-auto-rows auto
			width 420px
	
	&__item
		&--two-col
			@media $xxsPlus
				grid-column span 2
		
		&--two-rows
			@media $md
				grid-row span 2
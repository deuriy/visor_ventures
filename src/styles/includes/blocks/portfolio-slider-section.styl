.portfolio-slider-section
	padding-top 100px
	padding-bottom 116px
	border-top-right-radius 16px
	border-top-left-radius 16px
	background #181818
	
	@media $mdMinus
		padding-top 80px
		padding-bottom 100px
	
	@media $smMinus
		padding-top 60px
		padding-bottom 80px
		
	@media $xs
		padding-top 40px
		padding-bottom 60px
	
	&__header,
	&__swiper-buttons
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		align-items center
	
	&__header
		position relative
		z-index 10
		gap 20px
		margin-bottom -40px
		
		@media $xs
			margin-bottom 25px
	
	&__swiper-buttons
		gap 10px
	
	&__title
		color #FFF
		font-weight 600
		font-size 16px
		line-height 1.045
		letter-spacing 2px
		text-transform uppercase
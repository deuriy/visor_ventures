.mobile-navigation
	position fixed
	inset 0
	opacity 0
	visibility hidden
	@extend .transition
	
	&__overlay
		content ""
		position absolute
		inset 0
		background rgba(0, 0, 0, 0.24)
		backdrop-filter blur(10px)
	
	&__inner
		position absolute
		top 0
		right -100%
		bottom 0
		display grid
		grid-template-columns 100%
		grid-template-rows auto 1fr
		width 731px
		// @extend .transition
		transition all .8s
.advantages-section
	border-top-right-radius 16px
	border-top-left-radius 16px
	background #EEEFF4
	
	&__container
		position relative
		display grid
		grid-template-columns 380px 1fr
		align-items start
		gap 20px
		padding 96px 0 126px
		
		@media $mdMinus
			grid-template-columns 320px 1fr
			padding 70px 0 110px
			
		@media $smMinus
			grid-template-columns 170px 1fr
			padding 50px 0 90px
		
		@media $xs
			grid-template-columns 100%
			padding 40px 0 80px
	
		@media $xxs
			padding 25px 0 55px
		
		&::before
			content ""
			position absolute
			// bottom 0
			// left 0
			// bottom -32px
			bottom -44px
			left -128px
			width 415px
			// padding-top 38vw
			height 455px
			background url("../img/spiral.png") center / contain no-repeat
			
			@media $mdMinus
				bottom -95px
				left 22px
				width 320px
				
			@media $smMinus
				// bottom -60px
				bottom -155px
				left 30px
				width 160px
			
			@media $xs
				display none
	
	&__title
		font-weight 600
		font-size 16px
		text-transform uppercase
		letter-spacing 2px
	
	&__items
		// display grid
		// grid-template-columns repeat(2, auto)
		display flex
		flex-wrap wrap
		gap 20px
		margin-top 4px
		
		@media $mdMinus
			gap 15px
		
		@media $xxs
			flex-direction column
	
	&__item
		&:nth-child(1),
		&:nth-child(4)
			// flex-grow 2
			flex-basis calc(57.8% - 10px)
			
			@media $xs
				flex-basis calc(50% - 10px)
			
		&:nth-child(2),
		&:nth-child(3)
			// flex-grow 1
			flex-basis calc(42.2% - 10px)
			
			@media $xs
				flex-basis calc(50% - 10px)
			

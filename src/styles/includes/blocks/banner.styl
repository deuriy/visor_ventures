.banner
	border-top-right-radius 16px
	border-top-left-radius 16px
	padding 114px 0 0
	background #5C090B
	color #fff
	
	@media $mdMinus
		padding-top 70px
		
	@media $smMinus
		padding-top 50px
		padding-bottom 15px
		
	@media $xs
		padding-top 35px
		padding-bottom 10px
		
	@media $xxs
		padding-top 25px
		padding-bottom 20px
		text-align center
	
	&__inner
		max-width 100%
		margin-right auto
		margin-left auto
		
		@media $mdMinus
			width 960px
			
		@media $smMinus
			// width 800px
			width 720px
			
		@media $xs
			width 540px
	
	&__wrapper
		display grid
		// grid-template-columns 1fr auto
		grid-template-columns 1fr 473px
		gap 40px
		
		@media $mdMinus
			grid-template-columns 1fr 400px
			gap 30px
			
		@media $smMinus
			grid-template-columns 1fr 320px
			gap 20px
			
		@media $xs
			grid-template-columns 1fr 240px
			gap 10px
			
		@media $xxs
			grid-template-columns 100%
			gap 20px
	
	&__title
		margin-bottom 33px
		font-weight 500
		font-size 150.448px
		line-height 1.045
		
		@media $mdMinus
			font-size 120px
		
		@media $smMinus
			margin-bottom 24px
			font-size 90px
		
		@media $xs
			font-size 60px
		
		@media $xxs
			margin-bottom 18px
			font-size 38px
	
	&__text
		margin-bottom 45px
		font-size 18px
		line-height 1.64746
		
		@media $smMinus
			margin-bottom 35px
			font-size 17px
		
		@media $xs
			font-size 15px
		
		@media $xxs
			margin-bottom 28px
			font-size 14px
	
	&__img
		margin -89px 27px -37px 0
		pointer-events none
		
		@media $mdMinus
			margin -79px 27px -24px 0
			
		@media $smMinus
			margin -60px 0 -24px 10px
			
		@media $xs
			margin -45px 0 -15px 0
		
		@media $xxs
			width 240px
			margin 0 auto -20px
	
	&--light-bg
		background #EEEFF4
		color #181818
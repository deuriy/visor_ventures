.footer
	margin-top -16px
	color #FFF
	
	&__container
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		align-items start
		gap 20px
		
		@media $xs
			grid-template-columns 100%
			gap 15px
	
	&__top
		// padding 64px 0
		padding 64px 0 73px
		border-top-right-radius 16px
		border-top-left-radius 16px
		background #181818
		
		@media $mdMinus
			padding 50px 0 60px
		
		@media $smMinus
			padding 35px 0
			
		@media $xs
			padding 20px 0
	
	&__bottom
		padding 8px 0
		background #060606
	
	&__link
		color #FFF
		
		&:hover
			text-decoration none
	
	&__contacts
		@media $smPlus
			margin-top 7px
	
	&__copyright
		font-weight 600
		
		a
			color #FFF
			text-decoration underline
			
			&:hover
				text-decoration none